{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "quotes": [
            "warn",
            "double"
        ],
        "indent": [
            "warn",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "camelcase": "warn",
        "semi": [
            "warn",
            "never"
        ],
        "space-before-function-paren": "off",
        "prefer-promise-reject-errors": "off",
        "eol-last": "off",
        "no-unused-vars": "warn",
        "no-trailing-spaces": "off"
    }
}
